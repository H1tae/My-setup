{
  "position": "top",
    "margin-top" : 2,
    "margin-left": 10,
    "margin-right": 10,
    "height" : 28,
    "modules-left": [
      "custom/logo",
      "hyprland/workspaces",
      "hyprland/window"
    ],
    "modules-center": [
    "custom/monitor",
    "cpu",
    "memory",
    // "custom/gpu",
    "temperature",
    "backlight"
    ],
    "modules-right": [
    "bluetooth",
    "pulseaudio",
    "pulseaudio#mic",
    "custom/capslock",
    "hyprland/language",
    "network",
    "battery",
    "clock",
    "custom/exit"
    ],

//   "custom/gpu": {
//    "format": "{icon} {}%",
//    "format-icons": "󰾲",
//    "on-click": ""
// }


    "custom/monitor":{
      "format" : "󱄄  {text}",
      "tooltip": false,
      "exec": "~/.config/waybar/scripts/rate.sh",
      "signal": 1,
      "menu": "on-click",
      "menu-file": "~/.config/waybar/scripts/monitor.xml",
      "menu-actions": {
        "60": "echo 60 > ~/.config/hypr/rate.txt ; pkill -RTMIN+1 waybar ",
        "120": "echo 120 > ~/.config/hypr/rate.txt ; pkill -RTMIN+1 waybar  ",
        "165": "echo 165 > ~/.config/hypr/rate.txt ; pkill -RTMIN+1 waybar  "
		  }

    },

      "hyprland/window": {
      "format": "{}",
      "max-length": 20,
      "icon": true,
      "icon-size": 40,
      "rewrite": {
      },
      "separate-outputs": true
    },

    "custom/logo": {
      "format": "",
      "tooltip": false,
      "on-click": "code ~/.config/"
    },

    "hyprland/workspaces": {
      "format": "{icon}",
      "on-click": "activate",
      "format-icons": {
        "active": "",
        "1": "<b>1</b>",
        "2": "<b>2</b>",
        "3": "<b>3</b>",
        "4": "<b>4</b>",
        "5": "<b>5</b>",
        "6": "<b>6</b>",
        "7": "<b>7</b>",
        "8": "<b>8</b>",
        "9": "<b>9</b>",
        "10": "<b>10</b>"    
      },
      "sort-by-number": true,
      "persistent-workspaces": {
        "*": 4,
        "HDMI-A-1": 3
      }
    },

    "backlight": {
      "device": "intel_backlight", // Replace with your actual backlight device (e.g., "amdgpu_bl0")
      "format": "{icon} <b>{percent}%</b>",
      "tooltip": false,
      "smooth-scrolling-threshold": 1,
      "format-icons": ["",  "", "", "", "", "", "", "", "", "", "", "", "", ""], // Icons for different brightness levels (optional)
      "on-scroll-up": "brightnessctl s 1%+",
      "on-scroll-down": "brightnessctl --min-value=21 s 1%-",
      "on-click-right": "brightnessctl s 21", // Optional: set brightness to 0 on right-click
      "on-click": "brightnessctl s 171"
    },
    "clock": {
      "format": "<b>{:%H:%M}</b>",
      "tooltip-format": "<big><span color ='#6770e6'><b>{:%d %A}</b></span></big>\n<tt>{calendar}</tt>",
      "format-alt": "<b>{:%d|%m|%Y}</b>",
      "calendar": {
                "on-scroll": 1,
            		"mode": "month",
            		"format": {
                      "weeks": "W{}",
                	    "months": "<span color='#d0a4eb'><b>{}</b></span>",
                      "days": "<span color='#cdd6f4'><b>{}</b></span>",
                	    "weekdays": "<span color='#65968e'><b>{}</b></span>",
                	    "today": "<span color='#ff6699'><b>{}</b></span>"
            	}
            }
    },

    "bluetooth": {
      "format-on": "󰂯",
      "format-off": "󰂲",
      "format":"󰂱",
      "format-disabled": "󰂲",
      "interval": 1,
      "tooltip": false,
      "on-click-right": "blueman-manager",
      "on-click": "rfkill toggle bluetooth",
      "format-connected-battery":"{icon} <b>{device_battery_percentage}%</b>",
      "format-icons": ["󰥇", "󰤾", "󰤿", "󰥀", "󰥁", "󰥂", "󰥃", "󰥄", "󰥅", "󰥆", "󰥉"]
    },
  
    "cpu": {
      "format": "  <b>{usage}%</b>",    
      "interval": 1,
      "on-click": "kitty btop"              
    },
    "memory": {
      "format": "  <b>{used:0.1f}G</b>" ,
      "tooltip-format": "{used:0.1f}G/22.9G",
      "on-click": "kitty btop"
    },
    "temperature": {
      "critical-threshold": 80,
      "interval": 1,
      "hwmon-path": "/sys/class/hwmon/hwmon4/temp1_input",
      "format": "{icon} <b>{temperatureC}°C</b>",
      "format-icons": ["", "", ""],
      "on-click": "kitty btop"
    },
    "battery": {
      "interval": 1,
      "states": {
        "warning": 30,
        "critical": 15
      },
      "format": "{icon} <b>{capacity}%</b>",
      "format-full": "{icon} <b>{capacity}%</b>",
      "format-charging": "󰂄 <b>{capacity}%</b>",
      "format-plugged": " <b>{capacity}%</b>",
      // "format-alt": "{iscon}  {time}",
      // "format-icons": ["", "", "", "", ""],
      "format-icons": ["󰂃", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
      "on-click": "kitty tlpui"
    },
    
    "network": {
      "format-wifi": "  <b>{signalStrength}%</b>",
      "format-ethernet": "<b>{ifname}</b> ",
      "tooltip-format-wifi": "<b>SSID: {essid}</b>",
      "tooltip-format-disconnected": "<b>No internet connection</b>",
      "tooltip-format-ethernet": "<b>{cidr}</b>",
      "format-linked": "<b>{ifname}</b> ",
      "tooltip-format-linked": "<b>(No IP) {cidr}</b>",
      "format-disconnected": "  ⚠", 
      "on-click": "networkmanager_dmenu",
      "on-click-right": "nmcli networking off && nmcli networking on"
    },


    "hyprland/language": {
    "format-ru": " <b>RU</b> ", 
    "format-en": " <b>EN</b> "
    },

    "custom/capslock": {
      "exec": "~/.config/waybar/scripts/capslock.sh",
      "format":"{text}",
      "interval": 1,
      "tooltip": false
    },
    

    "pulseaudio": {
      "min-length": 5.5,
      "format": "{icon} <b>{volume}%</b>",
      "format-bluetooth": "󰂯 {icon} <b>{volume}%</b>",
      "format-bluetooth-muted": "󰂯  <b>{volume}%</b>",
      "format-muted": " <b>{volume}%</b>",
      "on-click-right": "pavucontrol",
      "format-icons": {
        "headphone": "",
        "hands-free": "󰓃",
        "headset": "",
        "phone": "",
        "portable": "",
        "car": "",
        "default": ["", "", ""]
      },
      "smooth-scrolling-threshold": 1,
      "on-scroll-up": "wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ 1%+",
      "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%-",
      "max-volume": 150,
      "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"

    },

    "pulseaudio#mic": {
    "format-source": " <b>{volume}%</b>",
    "format-source-muted": " <b>{volume}%</b>",
    "format": "{format_source}",
    "smooth-scrolling-threshold": 1,
    "max-volume": 150,
    "on-click": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
    "on-click-right": "pavucontrol",
    "on-scroll-up": "wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SOURCE@ 1%+",
    "on-scroll-down": "wpctl set-volume @DEFAULT_AUDIO_SOURCE@ 1%-",
    
},

    "custom/exit": {
        "format": " ",
        "on-click": "wlogout",
        "tooltip": false
    }
}
